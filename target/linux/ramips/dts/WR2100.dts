/dts-v1/;

#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "cudy,wr2100", "mediatek,mt7621-soc";
	model = "Cudy WR2100";

	aliases {
		led-boot = &led_internet_blue;
		led-failsafe = &led_internet_blue;
		led-running = &led_internet_blue;
		led-upgrade = &led_internet_blue;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x8000000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	leds {
		compatible = "gpio-leds";

		led_internet_blue: internet_blue {
			label = "wr2100:blue:internet";
			gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
		};

		internet_red {
			label = "wr2100:red:internet";
			gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
		};

		wan {
			label = "wr2100:green:wan";
			gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
		};

		lan1 {
			label = "wr2100:green:lan1";
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
		};

		lan2 {
			label = "wr2100:green:lan2";
			gpios = <&gpio0 18 GPIO_ACTIVE_LOW>;
		};

		lan3 {
			label = "wr2100:green:lan3";
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
		};

		lan4 {
			label = "wr2100:green:lan4";
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
		};
	};

	keys {
		compatible = "gpio-keys-polled";
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
				read-only;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x50000 0xf80000>;
			};

			partition@fd0000 {
				label = "debug";
				reg = <0xfd0000 0x10000>;
				read-only;
			};

			partition@fe0000 {
				label = "backup";
				reg = <0xfe0000 0x10000>;
				read-only;
			};


			bdinfo: partition@ff0000 {
				label = "bdinfo";
				reg = <0xff0000 0x10000>;
				read-only;
			};
		};
	};
};

&pcie {
	status = "okay";
};

&pcie0 {
	wifi@0,0 {
		reg = <0x0000 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x0000>;
		ieee80211-freq-limit = <2400000 2500000>;
	};
};

&pcie1 {
	wifi@1,0 {
		reg = <0x0000 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x8000>;
		ieee80211-freq-limit = <5000000 6000000>;
	};
};

&ethernet {
	mtd-mac-address = <&bdinfo 0xde00>;
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "i2c", "jtag", "uart2", "uart3", "wdt";
			ralink,function = "gpio";
		};
	};
};
